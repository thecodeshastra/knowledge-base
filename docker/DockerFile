FROM node:20-alpine

# Install git for docusaurus metadata and search plugin
RUN apk add --no-cache git

WORKDIR /app

# Install dependencies first (better caching)
# Note: we are in the repo root context, site is in site/
COPY site/package.json site/yarn.lock* ./
RUN yarn install

# Copy site contents
COPY site/ .
# Copy docs contents to a sibling directory of /app
COPY docs/ ../docs/

# Build the site (generates search index)
RUN yarn run build

EXPOSE 3000

# Serve the static site
CMD ["yarn", "run", "serve", "--host", "0.0.0.0", "--port", "3000"]
